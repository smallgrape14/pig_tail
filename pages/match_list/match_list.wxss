 .content-item {
  height: 100%;
  border-bottom: 2px solid #553615;
  width: 100%;
 }
 .avater {
  height: 50rpx;
  width: 50rpx;
  border-radius: 100rpx;
  margin-top: 25rpx;
  float: left;
 }
 .uuid {
  font-size: 26rpx;
  float: left;
  line-height: 100rpx;
  color: #000000;
  margin-left: 20rpx;
  width: 60%;
  overflow: hidden;
 }
 .host_id {
  font-size: 26rpx;
  float: right;
  line-height: 100rpx;
  color: rgb(20, 17, 17);
 }
 .client_id{
  font-size: 26rpx;
  float: right;
  line-height: 100rpx;
  color: rgb(20, 17, 17);
}
.created_at{
  font-size: 26rpx;
  float: left;
  line-height: 100rpx;
  color: #000000;
  margin-left: 20rpx;
  overflow: hidden;
}