/* pages/online_match/online_match.wxss */


.top{
  position: absolute;
  justify-content: flex-end;
  top:2%;
  width: 100%;
  height: 30%;
  display: flex;
}
.player_2{
  display: flex;
  justify-content: flex-end;
  flex-direction: row;
  height: 100%;
  width: 85%;
}
.text{
  color:rgb(67, 22, 201);
  display: flex;
  font-family:Arial, Helvetica, sans-serif;
  font-size: large;
  /* background-color: rebeccapurple; */
}
.player_1{
  display: flex;
  flex-direction: row;
  height: 100%;
  width: 85%;
}
.middle{
  position: absolute;
  top:35%;
  width: 100%;
  height: 40%;
  display: flex;
}
.bottom{
  position: absolute;
  top:80%;
  width: 100%;
  height: 30%;
  display: flex;
}
.l{
  margin-left: 10%;
}
.large{
  top:5%;
  height: 60%;
  position:relative;
  background-color:rgb(197, 197, 197);
}
.turn{
  position:absolute;
  top:30%;
  display: flex;
  justify-content: center;
  width: 20%;
  background-color:rgb(250, 168, 232);
}
.s_bottom{
  margin-left: 3%;
}
.s_top{
  margin-right: 3%;
}
.small{
  /* top:10%; */
  height: 37%;
  position:relative;
  background-color:rgb(197, 197, 197);
}

.dialog_mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.4);   /*设置阴影半透明背景如： background: rgba(0, 0, 0, 0.4);*/
  display: none;
}

.dialog_container {
  position: fixed;
  bottom: 40%;
  width: 650rpx;    /*弹窗布局宽*/
  height: 25%;   /*弹窗布局高，与下面弹出距离transform有关*/
  margin-left: 50rpx;
  background: #fff799;
  transform: translateY(400%);  /*弹框弹出距离，与弹框布局高度有关，如300%表示弹起距离为3倍弹窗高度 */
  transition: all 0.4s ease;
  z-index: 12;
  border-radius: 20rpx;
  box-shadow: 0px 3px 3px 2px #aba000;  /*弹框的悬浮阴影效果，如不需要可注释该行*/
}

.show_dialog .dialog_container {
  transform: translateY(0);
}

.show_dialog .dialog_mask {
  display: block;
}
.game_over{
  font-size: 70rpx;
  width: 50%;
  color: rgb(231, 128, 192)
}
.text{
  display: flex;
  /* align-items: center; */
  justify-content: center;
}
.game_over_showDialog .dialog_container_2 {
  transform: translateY(0);
}

.game_over_showDialog .dialog_mask_2 {
  display: block;
}

.dialog_mask_2 {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.4);   /*设置阴影半透明背景如： background: rgba(0, 0, 0, 0.4);*/
  display: none;
}
.text_image{
  position: absolute;
  top:5%;
  left:5%;
  width:90%;
}

.no_image{
  position: absolute;
  top:50%;
  right:20%;
  height: 30%;
  width: 15%;
}
.yes_image{
  position: absolute;
  top:50%;
  left:20%;
  height: 30%;
  width: 15%;
}















